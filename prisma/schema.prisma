model Guest {
  id Int @id @default(autoincrement())
  email String
  first_name String
  last_name String
  address String
  attending Boolean
  diet String
  comment String
}

model PlusOne {
  id Int @id @default(autoincrement())
  first_name String
  last_name String
  diet String
  guest_id Int
}
